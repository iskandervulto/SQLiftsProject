import click

class Greeting:
    # def rainbow_text(text):
    #     rainbow_colors = ["red", "yellow", "green", "blue", "magenta", "cyan"]
    #     rainbow_text = ""
    #     for i, char in enumerate(text):
    #         color = rainbow_colors[i % len(rainbow_colors)]
